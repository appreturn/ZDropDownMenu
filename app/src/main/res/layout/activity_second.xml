<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--菜单相关-->
    <cc.ibooker.zdropdownmenulib.MDropDownMenu
        android:id="@+id/mdropdownmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/dividerColor"
        app:maskColor="@color/maskColor"
        app:menuBackgroundColor="@color/menuBackgroundColor"
        app:menuSelectedIcon="@mipmap/icon_up"
        app:menuTextSize="@dimen/menuTextSize"
        app:menuUnselectedIcon="@mipmap/icon_down"
        app:textSelectedColor="@color/textSelectedColor"
        app:textUnselectedColor="@color/textUnselectedColor"
        app:underlineColor="@color/underlineColor" />

    <!--内容区-->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/app_name" />

</FrameLayout>